<resources>
    <!-- Theme de base - RENOMMÉ EN Theme.Faten -->
    <style name="Theme.Faten" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorSecondary">@color/purple_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Theme plein écran -->
    <style name="Theme.Faten.FullScreen" parent="Theme.Faten">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Style pour les boutons outlined -->
    <style name="ButtonOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style pour les cards -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>